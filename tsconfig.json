{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@database/*": ["database/*"],
      "@middlewares/*": ["middlewares/*"],
      "@errors/*": ["errors/*"]
    }
  }
}
